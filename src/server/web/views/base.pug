block vars

doctype html

html

	head
		meta(charset='utf-8')
		meta(name='application-name' content='Areionskey')
		meta(name='referrer' content='origin')
		meta(name='theme-color' content='#00bb98')
		meta(property='og:site_name' content= instanceName || 'Areionskey')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='icon' href= icon || '/favicon.ico')
		link(rel='apple-touch-icon' href= icon || '/apple-touch-icon.png')
		link(rel='manifest' href='/manifest.json')
		meta(name='twitter:card' content= player ? 'player' : 'summary')
		meta(property='og:site_name' content= instanceName || 'Areionskey')

		if noindex
			meta(name='robots' content='noindex')

		title
			block title
				= title || 'Areionskey'

		block desc
			meta(name='description' content= desc || 'A federated/distributed microblogging platform')

		block meta

		block og
			meta(property='og:title' content= title || 'Areionskey') 
			meta(property='og:description' content= desc || 'A federated/distributed microblogging platform')
			meta(property='og:image' content= img)

		style
			include ./../../../../built/client/assets/init.css

		script(src=`/assets/boot.js?${version}`)

	body
		noscript: p
			| Areionskey を利用するには JavaScript を有効にしてください
			br
			| Please enable JavaScript to use Areionskey
		div#ini.
			<svg viewBox="0 0 50 50">
				<path fill=#fb4e4e d="M25.251,6.461c-10.318,0-18.683,8.365-18.683,18.683h4.068c0-8.071,6.543-14.615,14.615-14.615V6.461z" />
			</svg>
		block content
